/world
	sleep_offline = 0
	fps = 20
	cache_lifespan = 0

/world/New()
	world.log = file("dd_log.txt")

	HandleTestRun()

	del(src)

/world/proc/HandleTestRun()
	var/list/tests = typesof(/test/proc)
	for(var/func in tests)
		world.log << "[func] [copytext("------------------------------------------------------------------------", length("[func]"))]"
		var/test/T = new
		call(T, func)()
	sleep(10) // yield to allow tests to run
	world.log << "meow im done :)"